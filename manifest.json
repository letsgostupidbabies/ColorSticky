{
  "manifest_version": 3,
  "name": "Color Sticky — Notes & To‑Do",
  "description": "Beautiful, colorful sticky notes with a simple built‑in to‑do. Clean, fast, and delightful.",
  "version": "1.0.0",
  "action": {
    "default_title": "Color Sticky",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}